<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="InsideAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="android:colorControlActivated">@color/startBlue</item>
        <item name="android:colorControlHighlight">@color/startBlue</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.InsideAppTextInputLayout" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/startBlue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/startBlue</item>
        <item name="android:colorAccent">@color/startBlue</item>
    </style>

</resources>
