<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="80dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/cardFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/jobImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/gradient_shape"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/jobTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/jobImg"
                android:layout_alignStart="@id/jobImg"
                android:ellipsize="end"
                android:gravity="bottom|start"
                android:maxLines="1"
                android:paddingBottom="25dp"
                android:paddingStart="20dp"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1"
                android:singleLine="true"
                android:text="Desenvolvedor de software"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jobCompanyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/jobImg"
                android:layout_alignStart="@id/jobImg"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="50dp"
                android:layout_marginStart="20dp"
                android:gravity="bottom|start"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1"
                android:text="TOTVS"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/jobImg"
                android:layout_alignEnd="@id/jobImg"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="60dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_info"
                android:minHeight="30dp"
                android:minWidth="30dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>