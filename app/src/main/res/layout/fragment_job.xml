<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="ufg.go.br.recrutame.fragment.JobFragment">


    <LinearLayout
        android:id="@+id/actionBtn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rejectBtn"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_toStartOf="@id/acceptBtn"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_cancel"
            android:drawableTint="@color/colorAccent"
            android:text="@string/ignorar"
            android:textColor="@color/colorAccent"></Button>

        <Button
            android:id="@+id/acceptBtn"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignTop="@+id/rejectBtn"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_check"
            android:drawableTint="@color/colorPrimary"
            android:text="@string/aplicar"
            android:textColor="@color/colorPrimary"></Button>

    </LinearLayout>

    <com.mindorks.placeholderview.SwipePlaceHolderView
        android:id="@+id/swipeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.mindorks.placeholderview.SwipePlaceHolderView>

</FrameLayout>
